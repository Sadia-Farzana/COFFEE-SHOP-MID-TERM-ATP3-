     <!-- GOOGLE FONTS-->
	<title>View Take away order page</title>
  <style>
  table.center {
        margin-left: auto;
        margin-right: auto;
      }
			h3 {text-align: right;}
  </style>

</head>
<body>
	<center>
				<h1>All Take away order</h1>
			  <h2>Name <%= username %></h2>
			</center>

                        <form class="form-inline my-1 my-lg-0">
                            <input id="search" class="form-control mr-sm-3" type="search" placeholder="Search" aria-label="Search">

                        </form>
                   

						<h3><a href="/home">Back</a>|<a href="/logout">Logout</a></h3>


    		<% for(var i=0; i < userList.length; i++){ %>
				 <fieldset>
					<table id="example" class="table table-striped table-bordered" style="width:100%">
					<legend><%= userList[i].name %></legend>
    		<tr>
    			<th>ID</th><td><%= userList[i].id %></td>
				</tr>
				<tr>
    			<th>Username</th><td><%= userList[i].username %></td>
				</tr>
			<tr>
    			<th>Orderid</th><td><%= userList[i].orderid %></td>
    		</tr>
        <tr>
          <th>Address</th><td><%= userList[i].address %></td><td>
        </tr>
        <tr>
          <th>Time</th><td><%= userList[i].Time%></td><td>
        </tr>
        <tr>
      
        <a href="Reject/<%= userList[i].id %>">Reject Order</a></td>
        </tr>
        
				</table>
         <tr>
      <td>
        <a href="Reject/<%= userList[i].id %>">Accept Order</a></td>
        </tr>
        
				</fieldset>
    		<% } %>

</body>
</html>
<script type="text/javascript">
    $(document).ready(function() {
    $('#example').DataTable( {
        "order": [[ 3, "desc" ]]
    } );
} );
</script>


